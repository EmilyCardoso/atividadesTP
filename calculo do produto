String Nome;
            Peso duplo, ValorProduto, Calculo;

            Nome = textBox1.Text;
            Peso = Convert.ToDouble (textBox2.Text);
            ValorProduto = Convert.ToDouble (textBox3.Text);
            Calculo = Peso * ValorProduto;

            MessageBox.Show ("Calculo do Produto" + Nome + "Ã© R $" + Calculo);
        }

